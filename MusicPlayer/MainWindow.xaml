<Window x:Class="MusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button Name="SelectFileButton" Grid.Row="0">SelectFile</Button>
            <TextBox Name="filenameTextBox" Grid.Row="1"></TextBox>
            <Slider Name="volumeTrackBar" Grid.Row="2"></Slider>
            <Button Name="PauseButton" Grid.Row="3">Pause</Button>
        </Grid>
    </Grid>
</Window>
